{
  "testEnvironment": "node",
  "collectCoverage": true,
  "coverageThreshold": {
    "global": {
      "branches": 90,
      "functions": 90,
      "lines": 90,
      "statements": 90
    }
  },
  "collectCoverageFrom": [
    "src/**/*.js"
  ],
  "testMatch": [
    "**/?(*.)(spec).js?(x)"
  ],
  "testPathIgnorePatterns": [
    "<rootDir>/node_modules"
  ]
}